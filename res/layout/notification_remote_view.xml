<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/settings_bar_bg"
    android:padding="0dp" >
    
    <ImageView
        android:id="@+id/notify_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/default_playlist_list" />

    <TextView
        android:id="@+id/notify_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/notify_pic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/notify_pic"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/notify_artist_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/notify_music_name"
         android:layout_below="@+id/notify_music_name"
         android:layout_marginTop="5dp"
         android:textColor="#c0c0c0"
         android:textSize="12dp" />
     
     <ImageView
         android:id="@+id/notify_play_status"
         android:layout_height="40dp"
         android:layout_width="40dp"
         android:layout_centerVertical="true"
         android:layout_toLeftOf="@+id/notify_next_song"
         android:layout_marginRight="15dp"
         android:scaleType="fitXY"
         android:clickable="true"
         />
     <ImageView 
         android:id="@+id/notify_next_song"
         android:layout_height="40dp"
         android:layout_width="40dp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:layout_marginRight="15dp"
         android:clickable="true"
         android:background="@drawable/nextsong_btn"
         />

</RelativeLayout>
