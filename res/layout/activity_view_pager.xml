<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lzh.viewpager.ViewPagerActivity" 
    android:orientation="vertical">

    <LinearLayout 
        android:id="@+id/selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
           android:id="@+id/home"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:background="@drawable/home_btn">
             <ImageView 
                android:id="@+id/home_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home"
                android:layout_centerInParent="true"/>
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_below="@+id/home_pic"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/local"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_btn"
            >
             <ImageView 
                android:id="@+id/local_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/local"
                android:layout_centerInParent="true"/>
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_music"
                android:layout_below="@+id/local_pic"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/online"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_btn"
            >
             <ImageView 
                android:id="@+id/online_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/online"
                android:layout_centerInParent="true"/>
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线音乐"
                android:layout_below="@+id/online_pic"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
         <RelativeLayout
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_btn"
            >
             <ImageView 
                android:id="@+id/settings_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/settings"
                android:layout_centerInParent="true"/>
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_below="@+id/settings_pic"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

         <android.support.v4.view.ViewPager
             android:id="@+id/vp"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="8.0"
             android:background="#000000"
             android:flipInterval="30"
             android:persistentDrawingCache="animation" >
         </android.support.v4.view.ViewPager>

</LinearLayout>
