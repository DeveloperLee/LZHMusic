<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lzh.activity.NetworkLoadingActivity"
    android:background="@drawable/network_loading_bg">
    
      <ImageView 
        android:id="@+id/loading_loading_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/network_loading"/>
    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_text"
        android:textSize="14sp"
        android:textColor="@color/app_green"
        android:layout_below="@+id/loading_loading_pic"
        android:layout_marginTop="15dp" 
        android:layout_centerHorizontal="true"/>
  

</RelativeLayout>
