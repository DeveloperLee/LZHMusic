<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lzh.activity.AddSongActivity" 
    android:orientation="vertical">
    
     <RelativeLayout
       android:id="@+id/addsong_titlebar"
       android:layout_height="0dp"
       android:layout_width="fill_parent"
       android:layout_weight="1.0"
       android:background="@drawable/titlebar">
       <ImageButton 
           android:id="@+id/back"
           android:layout_width="70dp"
           android:layout_height="55dp"
           android:layout_centerVertical="true"
           android:layout_marginLeft="5dp"
           android:background="@drawable/back_activity_btn"/>
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:textSize="16sp"
           android:text="@string/add_song"/>
       <ImageButton 
           android:id="@+id/confirm"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/confirm_add"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="5dp"
           android:visibility="gone"/>
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">
          <CheckBox 
             android:id="@+id/selectAll"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="5dp"
             android:button="@drawable/check_box_btn"/>
          <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/selectAll"
             android:textSize="15sp"
             android:layout_toRightOf="@+id/selectAll"
             android:layout_centerVertical="true"/>
          <TextView
             android:id="@+id/total_selected"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:textSize="13sp" />
      </RelativeLayout>
      
      <RelativeLayout
        android:layout_weight="8.0"
        android:layout_height="0dp"
        android:layout_width="fill_parent">
       <ListView
         android:id="@+id/add_list"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:divider="@drawable/list_divider"
         android:listSelector="@drawable/top_selector_bg"
         android:cacheColorHint="#00000000"
         android:fadeScrollbars="true">
       </ListView>
     </RelativeLayout>
    

</LinearLayout>
